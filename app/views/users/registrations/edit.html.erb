<header class="page-header">
    <h2><%= t(".title") %></h2>
    <div class="right-wrapper text-right">
        <ol class="breadcrumbs">
            <li>
                <%= link_to dashboard_path, data: { turbolinks: false } do %>
                    <i class="fas fa-home"></i>
                <% end %>
            </li>
            <li><%= link_to t(".title"), settings_path, data: { turbolinks: false } %></li>
        </ol>
    </div>
</header>


<section class="card">
    <header class="card-header">
        <h2 class="card-title"><%= t('.edit') %></h2>
    </header>
    <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :username, class: "control-label pt-2" %>
            <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "username" %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: "control-label pt-2" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "control-label pt-2" %> <i>(<%= t('.leave_blank') %>)</i>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <span class="help-block"><em><%= @minimum_password_length %> characters minimum</em></span>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: "control-label pt-2" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, class: "control-label pt-2" %> <i>(<%= t('.need_current_password') %>)</i><br />
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit t(".update"), class: "btn btn-primary" %>
          </div>
        <% end %>

        <hr>

        <section class="card card-danger">
          <header class="card-header">
              <h2 class="card-title"><%= t('.cancel_account') %></h2>
          </header>
          <div class="card-body">
            <p>Unhappy? <%= button_to t(".cancel_account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
          </div>
          </section>
    </div>
</section>
